<script>
  function nextPage(n) {
    document.getElementById("page" + n).classList.remove("active");
    document.getElementById("page" + n).classList.add("hidden-left");
    document.getElementById("page" + (n + 1)).classList.add("active");
  }

  function restart() {
    document.querySelectorAll(".page").forEach(p => {
      p.classList.remove("active", "hidden-left");
    });
    document.getElementById("page1").classList.add("active");
  }
</script>

